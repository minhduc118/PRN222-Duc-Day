<Window x:Class="project_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="566" Width="831">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="448*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="643*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,20,10,20">
            <DataGrid x:Name="Products" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" AlternatingRowBackground="Blue">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="70"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="120"/>
                    <DataGridTextColumn Header="QuantityPerUnit" Binding="{Binding QuantityPerUnit}" Width="100"/>
                    <DataGridTextColumn Header="UnitPrice" Binding="{Binding UnitPrice}" Width="100"/>
                    <DataGridTextColumn Header="UnitsInStock" Binding="{Binding UnitsInStock}" Width="100"/>
                    <DataGridTextColumn Header="UnitsOnOrder" Binding="{Binding UnitsOnOrder}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
